<div class="row">
  <div class="col-md-12" id="profile-page-form">
    <h2>Create Your Profile</h2>

        <%= simple_form_for(@profile, multipart: true, class: 'form-control') do |f| %>
          <div class="col-md-3">
            <li><%= f.input :first_name,label: false, id:'form_input', placeholder:"Enter your First Name" %></li>
            <li><%= f.input :last_name,label: false, placeholder:"Enter your Last Name" %></li>
            <li><%= f.input  :sexe,label: false, placeholder:"Select a Sexe" %></li>
            <li><%= f.input :date_of_birth, id: "DOB-container",as: :date, start_year: Date.today.year - 40,
                                       end_year: Date.today.year , discard_day: false,
                                       order: [:day ,:month, :year],label: false %></li>
         </div>
         <div class="col-md-3">
          <li><%= f.input :nationality, label: false,placeholder: "Enter Your Nationality" %></<li>
          <li><%= f.input :zipcode,label: false, placeholder:"Enter your Zipcode" %></li>
          <li><%= f.input :state,label: false, placeholder:"Select a State" %></li>
         </div>

        <div class="col-md-6">
          <%= f.input :about_me, as: :text, id:"about_me",label: false, placeholder:"Add something clever after all this is an Authobiography" %>
       </div>
      <%= f.button :submit, class: "btn btn-primary", id:'mindmap-btn' %>
      <% end %>
</div>
