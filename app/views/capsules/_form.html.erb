<%= simple_form_for(@capsule , multipart: true) do |f| %>
  <%= f.input :title, class:'form-control' %>
  <%= f.input :about, as: :text, class: 'form-control'%>
  <%= f.input :purpose, as: :text, class: 'form-control'%>
  <%= f.button :submit, class:'btn btn-primary' %>
  <%= link_to "Cancel", capsules_path %>
<% end %>
